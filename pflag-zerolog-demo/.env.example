# Пример переменных окружения для viper-env-demo
# Скопируйте этот файл в .env и измените значения по необходимости

# Настройки логирования
VIPER_LOG_LEVEL=debug
VIPER_LOG_FORMAT=console
VIPER_LOG_PRETTY=true
VIPER_LOG_CALLER=false

# Настройки сервера
VIPER_SERVER_HOST=0.0.0.0
VIPER_SERVER_PORT=3000
VIPER_SERVER_READ_TIMEOUT=45s
VIPER_SERVER_WRITE_TIMEOUT=45s
VIPER_SERVER_TLS_ENABLED=false

# Настройки базы данных
VIPER_DATABASE_HOST=db.example.com
VIPER_DATABASE_PORT=5432
VIPER_DATABASE_DATABASE=production_db
VIPER_DATABASE_USERNAME=app_user
VIPER_DATABASE_PASSWORD=supersecretpassword
VIPER_DATABASE_MAX_CONNECTIONS=50
VIPER_DATABASE_SSL_MODE=require

# Настройки приложения
VIPER_APP_NAME=my-production-app
VIPER_APP_VERSION=2.0.0
VIPER_APP_ENVIRONMENT=production
VIPER_APP_DEBUG=false
